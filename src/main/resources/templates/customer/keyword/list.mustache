{{>customer/layout/header}}
<link rel="stylesheet" type="text/css" href="/css/keyword/list.css">
{{>customer/layout/navigator}}
<!-- 본문 -->
<div>
    <!-- 키워드 등록 부분 -->
    <div id="keywordInputArea" class="input-group">
        <input id="keywordInput" type="text" class="form-control" placeholder="키워드" maxlength="30">
        <button id="saveKeywordBtn" class="btn btn-secondary">등록</button>
    </div>

    <!-- 검색 결과 정렬 부분
    <div id="sortArea">
        <span>키워드로 정렬</span> /
        <span>노출 위치로 정렬</span> /
        <span>키워드로 정렬</span> /
        <span>노출 일시로 정렬</span>
    </div> -->
    <!-- 검색 결과 부분 -->
    <div id="searchResultArea" class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">no</th>
                    <th scope="col">키워드</th>
                    <th scope="col">월 검색량</th>
                    <th scope="col">섹션</th>
                    <th scope="col">내용</th>
                    <th scope="col">삭제</th>
                </tr>
            </thead>
            <tbody>
                {{#keywordList}}
                    <tr class="keywordMainRow" idx="{{idx}}" keyword="{{keywordText}}">
                        <td rowspan="5">{{sort}}</td>
                        <td rowspan="5" class="keywordCol">
                            <span class="keywordText">{{keywordText}}</span>
                            <span class="tooltipText"></span></td>
                        <td rowspan="5" class="searchCntCol"></td>
                        <td class="section1"></td>
                        <td class="posts1"></td>
                        <td rowspan="5" class="deleteKeywordCol">삭제</td>
                    </tr>
                    <tr keyword="{{keywordText}}"><td class="section2"></td><td class="posts2"></td></tr>
                    <tr keyword="{{keywordText}}"><td class="section3"></td><td class="posts3"></td></tr>
                    <tr keyword="{{keywordText}}"><td class="section4"></td><td class="posts4"></td></tr>
                    <tr keyword="{{keywordText}}"><td class="section5"></td><td class="posts5"></td></tr>
                {{/keywordList}}
            </tbody>
        </table>
        <div id="tooltip"></div>
    </div>
</div>
{{>customer/layout/includeJs}}
<script src="/js/keyword/list.js"></script>
{{>customer/layout/footer}}