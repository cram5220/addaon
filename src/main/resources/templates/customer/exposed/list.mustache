{{>customer/layout/header}}
<link rel="stylesheet" type="text/css" href="/css/exposed/list.css">
{{>customer/layout/navigator}}
<!-- 본문 -->
<div>
    <!-- 포스트 등록 부분 -->
    <div id="postInfoInputArea" class="input-group">
        <input id="keywordInput" type="text" class="form-control" placeholder="키워드">
        <input id="postNameInput" type="text" class="form-control" placeholder="게시물명">
        <input id="postUrlInput" type="text" class="form-control" placeholder="게시물 링크">
        <button id="saveExposedBtn"  class="btn btn-secondary">등록</button>
    </div>
    <!-- 검색 결과 정렬 부분
    <div id="sortArea">
        <span>키워드로 정렬</span> /
        <span>노출 위치로 정렬</span> /
        <span>키워드로 정렬</span> /
        <span>노출 일시로 정렬</span>
    </div> -->
    <!-- 검색 결과 부분 -->
    <div id="exposedListArea" class="table-responsive">
        <table class="table table-striped table-sm">
            <tr>
                <th scope="col">no</th>
                <th scope="col">키워드</th>
                <th scope="col">게시물명</th>
                <th scope="col">노출 여부</th>
                <th scope="col">삭제</th>
            </tr>
            {{#exposedList}}
                <tr idx="{{idx}}" class="exposedRow" keyword="{{keyword}}" posturl="{{url}}">
                    <td>{{sort}}</td>
                    <td>{{keyword}}</td>
                    <td>{{title}}</td>
                    <td class="exposedInfoCol"></td>
                    <td>삭제</td>
                </tr>
            {{/exposedList}}
        </table>
    </div>
</div>
{{>customer/layout/includeJs}}
<script src="/js/exposed/list.js"></script>
{{>customer/layout/footer}}